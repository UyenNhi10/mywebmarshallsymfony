{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            margin-bottom: 20px;
            position: relative; /* Add position relative for pseudo-element */
        }

        header h1 {
            font-size: 2rem;
            margin-bottom: 0;
        }

        /* Add star icon before header */
        header h1:before {
            content: "\f005"; /* Font Awesome star icon */
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            margin-right: 10px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .product-image img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-details {
            padding: 1rem;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .product-price {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .product-description {
            margin-bottom: 1rem;
        }

        .product-rating {
            margin-bottom: 1rem;
        }

        .product-rating label {
            margin-right: 1rem;
            font-size: 1.2rem;
        }

        .product-button {
            display: inline-block;
            background-color: #333;
            color: #fff;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            font-size: 1.2rem;
        }

        .product-button:hover {
            background-color: #555;
        }

        .signup-link {
            text-align: center;
            margin-top: 20px;
        }

        .signup-link a {
            text-decoration: none;
            background-color: #333;
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .signup-link a:hover {
            background-color: #555;
        }

        footer {
            background-color: #f9f9f9;
            color: #333;
            padding: 20px;
            text-align: center;
            margin-top: 20px;
        }

        footer h5 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .contact-info {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin-top: 30px;
        }

        .contact-info p {
            margin: 0;
            padding: 5px;
        }

        .contact-info i {
            font-size: 18px;
            color: #007bff;
            margin-right: 5px;
        }

        /* Modify footer icon */
        footer h5:before {
            content: "\f179"; /* Font Awesome store icon */
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            margin-right: 10px;
        }

        /* Add hover effects for the icons */
        footer h5:before,
        footer ul li i:before {
            transition: color 0.3s ease;
        }

        footer h5:hover:before,
        footer ul li i:hover:before {
            color: #ff6600; /* Change color on hover */
        }
    </style>

    <header>
        <h1>Product Detail</h1>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="product-image">
                    <img src="{{ asset('image/' ~ product.getImage()) }}" class="card-img-top" alt="{{ product.getTitle() }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="product-details">
                    <h2 class="product-title">{{ product.getTitle() }}</h2>
                    <p class="product-price">Price: {{ product.getPrice() }}</p>
                    <p class="product-description">Description: {{ product.getDescription() }}</p>
                    <div class="product-rating">
                        <span class="quantity-label">Evaluate:</span>
                        <label>
                            <input type="radio" name="rating" value="5"> <i class="fas fa-star"></i>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="4"> <i class="fas fa-star"></i>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="3"> <i class="fas fa-star"></i>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="2"> <i class="fas fa-star"></i>
                        </label>
                        <label>
                            <input type="radio" name="rating" value="1"> <i class="fas fa-star"></i>
                        </label>
                    </div>
                    <form class="cart" action="{{ path('app_add_to_cart', {'productId': product.id}) }}" method="POST">
                        <button class="product-button addToCartBtn" type="submit">Add To Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="signup-link">
        <a href="{{ path('app_home') }}">Back to Home</a>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-store"></i> Apple Store</h5>
                    <p></p>
                    <p></p>
                </div>
                <div class="col-md-6">
                    <div class="contact-info">
                        <i class="fas fa-map-marker-alt" style="color: #3482A3; background-color: #fff;"></i> 12/4 Street, HCM, VietNam</p>
                        <p><i class="fas fa-phone" style="color: #3482A3; background-color: #fff;"></i> +1500 181 903</p>
                        <p><i class="fas fa-envelope" style="color: #3482A3; background-color: #fff;"></i> uyennhi@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}